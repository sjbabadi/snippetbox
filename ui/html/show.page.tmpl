{{template "base" .}}

{{define "title"}}Snippet #{{.Snippet.ID}}{{end}}

{{define "main"}}
  {{with .Snippet}}
  <div class='snippet'>
      <div class='metadata'>
          <strong>{{.Title}}</strong>
          <span>#{{.ID}}</span>
      </div>
      <pre><code>{{.Content}}</code></pre>
      <div class='metadata'>
          <time>Created: {{.CreatedAt.Weekday}}</time>
          <time>Expires: {{.ExpiresAt.Weekday}}</time>
      </div>
  </div>
  {{end}}
{{end}}